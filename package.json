{
  "name": "@shtse8/pdf-reader-mcp",
  "version": "0.3.9",
  "description": "An MCP server providing tools to read PDF files.",
  "type": "module",
  "bin": {
    "pdf-reader-mcp": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs --cache",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.cjs --fix --cache",
    "format": "prettier --write . --cache",
    "check-format": "prettier --check . --cache",
    "validate": "npm run check-format && npm run lint && npm run test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "glob": "^11.0.1",
    "pdfjs-dist": "^5.1.91",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1"
  }
}
